{
  "private": true,
  "scripts": {
    "build": "run-p build:*",
    "build:packages": "tsc -b packages --verbose",
    "build:website": "lerna run --stream --parallel --scope website build",
    "lint": "lerna run --stream --parallel lint",
    "start": "lerna run --stream --parallel start",
    "dev": "lerna run --stream --parallel dev",
    "test:coverage": "lerna run --stream --parallel test -- --coverage",
    "test": "lerna run --stream --parallel test",
    "watch": "run-p watch:*",
    "watch:packages": "yarn build:packages --watch --preserveWatchOutput",
    "watch:website": "lerna run --stream --parallel --scope website watch"
  },
  "devDependencies": {
    "lerna": "^3.8.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "website"
    ]
  }
}
